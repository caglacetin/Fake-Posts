<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="viewState"
        type="com.caglacetin.fakeposts.ui.postdetail.PostDetailViewState"
        />

  </data>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="@dimen/dp_16"
      >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_post_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@{viewState.postTitle}"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="@tools:sample/lorem"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_body_post_detail"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_post_detail"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@{viewState.postBody}"
        android:maxLength="120"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        tools:text="@tools:sample/lorem"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name_post_detail"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_body_post_detail"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@{viewState.name}"
        android:maxLength="120"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        tools:text="@tools:sample/lorem"
        />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_post_detail"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@{viewState.username}"
        android:maxLength="120"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        tools:text="@tools:sample/lorem"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>